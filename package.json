{
    "name": "rti-api",
    "version": "1.0.0",
    "description": "A REST api for RTI data.",
    "main": "dist/App.js",
    "dependencies": {
        "async-lock": "^1.4.1",
        "axios": "^1.8.1",
        "cors": "^2.8.5",
        "date-fns": "^4.1.0",
        "discord.js": "^14.16.3",
        "escape-string-regexp": "^4.0.0",
        "express": "^5.0.1",
        "jsonschema": "^1.5.0",
        "mongoose": "^8.9.3"
    },
    "devDependencies": {
        "@eslint/compat": "^1.2.7",
        "@eslint/js": "^9.21.0",
        "@types/async-lock": "^1.4.2",
        "@types/eslint__js": "^8.42.3",
        "@types/express": "^5.0.0",
        "@types/node": "^24.10.14",
        "eslint": "^9.21.0",
        "eslint-config-prettier": "^10.0.2",
        "nodemon": "^3.1.9",
        "prettier": "^3.5.2",
        "tsc-alias": "^1.8.11",
        "tsconfig-paths": "^4.2.0",
        "tsx": "^4.21.0",
        "typescript": "^5.9.3",
        "typescript-eslint": "^8.56.1"
    },
    "scripts": {
        "tsc": "tsc && tsc-alias",
        "ts-node": "tsx src/App.ts",
        "dev": "nodemon --inspect=0.0.0.0:9229 src/App.ts",
        "lint:js": "eslint src/",
        "lint:prettier": "prettier --check .",
        "lint": "npm run lint:js && npm run lint:prettier",
        "lintfix": "prettier --write --list-different . && npm run lint:js -- --fix"
    },
    "author": "Stephan Wells",
    "license": "ISC",
    "prettier": {
        "tabWidth": 4,
        "useTabs": false,
        "semi": true,
        "singleQuote": false,
        "endOfLine": "auto",
        "overrides": [
            {
                "files": "*.yml",
                "options": {
                    "tabWidth": 2
                }
            }
        ]
    }
}
