{
    "version": "0.2.0",
    "configurations": [
        {
            "cwd": "${workspaceFolder}",
            "type": "node",
            "request": "launch",
            "runtimeExecutable": "node",
            "runtimeArgs": [
                "--nolazy",
                "-r",
                "ts-node/register/transpile-only"
            ],
            "name": "Launch Program",
            "skipFiles": ["<node_internals>/**", "node_modules/**"],
            "outputCapture": "std",
            "args": ["src/App.ts", "Debug"],
            "env": {
                "PINO_PRETTY": "true"
            }
        }
    ]
}
