{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "outDir": "dist",
    "sourceMap": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "baseUrl": ".",
    "moduleResolution": "node",
    "typeRoots": ["node_modules/@types"],
    "paths": {
      "@RTIBot-DB/*": ["RTIBot-DB/*"]
    },
    "types": ["discord.js/typings"]
  },
  "include": ["./src/"],
  "exclude": ["node_modules", "dist"]
}
